<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:backgroundTint="@android:color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:divider="?android:dividerVertical"
        android:showDividers="middle">

        <!-- Job Title, Status, and Booking ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvJobTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🧹 Công việc"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvJobStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📌 Trạng thái: Đang xử lý"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="13sp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvBookingID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking #1"
                android:textSize="13sp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <!-- Family -->
        <TextView
            android:id="@+id/tvFamily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="👨 Gia đình: [Không rõ tên]"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Location and Salary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📍 Quận 1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvSalary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="💵 75,000 VND/h"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Start and End Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvStartDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📅 Bắt đầu: 22/04/2025"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvEndDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📅 Kết thúc: 29/04/2025"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📝 Mô tả: No"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Slot -->
        <TextView
            android:id="@+id/tvSlot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🕐 Ca: 16H - 17H"
            android:textSize="14sp"
            android:textColor="@color/teal_700"
            android:layout_marginTop="4dp" />

        <!-- Day of Week -->
        <TextView
            android:id="@+id/tvWeekday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📆 Thứ Ba"
            android:textSize="14sp"
            android:textColor="@color/amber_500"
            android:layout_marginTop="4dp" />

        <!-- Services -->
        <TextView
            android:id="@+id/tvServices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🛎️ Dịch vụ: Giữ trẻ theo giờ"
            android:textSize="14sp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginTop="4dp" />

        <!-- Check-In and Complete Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnCompleteJob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoàn thành ✅"
                android:textAllCaps="false"
                android:background="@drawable/rounded_button_green"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnCheckIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button_primary"
                android:text="Check-In"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
